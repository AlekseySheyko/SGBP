<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
        <item name="android:dropDownListViewStyle">@style/SpinnerDropdown</item>
        <item name="android:actionBarStyle">@style/ActionBar</item>
        <item name="android:windowBackground">@color/window_background</item>
    </style>

    <style name="ActionBar" parent="@android:style/Widget.Holo.Light.ActionBar.Solid">
        <item name="android:background">@drawable/actionbar_background</item>
        <item name="android:titleTextStyle">@style/MyTheme.ActionBar.TitleTextStyle</item>
        <item name="android:text">@style/MyTheme.ActionBar.TitleTextStyle</item>
    </style>

    <style name="MyTheme.ActionBar.TitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="SpinnerDropdown" parent="@android:style/Widget.TextView.SpinnerItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">96dp</item>
    </style>

    <style name="RegisterField">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:inputType">textPersonName</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginBottom">8dp</item>
    </style>

    <style name="FirstNameField" parent="RegisterField">
        <item name="android:hint">@string/first_name_hint</item>
        <item name="android:inputType">textPersonName|textNoSuggestions|textCapWords</item>
        <item name="android:maxLength">32</item>
    </style>

    <style name="LastNameField" parent="RegisterField">
        <item name="android:hint">@string/last_name_hint</item>
        <item name="android:inputType">textPersonName|textNoSuggestions|textCapWords</item>
        <item name="android:maxLength">32</item>
    </style>

    <style name="EmailField" parent="RegisterField">
        <item name="android:hint">@string/email_hint</item>
        <item name="android:inputType">textEmailAddress</item>
        <item name="android:maxLength">40</item>
    </style>

    <style name="SchoolField" parent="RegisterField">
        <item name="android:hint">@string/school_hint</item>
        <item name="android:inputType">textNoSuggestions|textCapSentences</item>
        <item name="android:maxLength">120</item>
    </style>

    <style name="GradeField" parent="RegisterField">
        <item name="android:hint">@string/grade_hint</item>
        <item name="android:ems">8</item>
        <item name="android:maxLength">12</item>
        <item name="android:inputType">textNoSuggestions|textCapSentences</item>
    </style>

    <style name="RegistrationSpinner">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <style name="TextHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#757575</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:layout_marginTop">28dp</item>
    </style>

    <style name="TextBody">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#212121</item>
        <item name="android:fontFamily">sans-serif-regular</item>
        <item name="android:lineSpacingExtra">3sp</item>
        <item name="android:layout_marginTop">8dp</item>
    </style>

    <style name="NavigationListItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">?android:attr/listPreferredItemPaddingLeft</item>
        <item name="android:paddingRight">?android:attr/listPreferredItemPaddingRight</item>
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
    </style>

    <style name="CheckBoxTextLabel">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <style name="CheckBox">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:scaleX">1.20</item>
        <item name="android:scaleY">1.20</item>
        <item name="android:checked">true</item>
    </style>

    <style name="TextDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginLeft">18dp</item>
        <item name="android:layout_marginRight">18dp</item>
        <item name="android:background">#22ffffff</item>
    </style>

    <style name="RegScrollView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingLeft">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingRight">@dimen/activity_horizontal_margin</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/window_background</item>
    </style>

    <style name="ButtonSend">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:paddingLeft">40dp</item>
        <item name="android:paddingRight">40dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:layout_marginBottom">14dp</item>
        <item name="android:layout_marginTop">22dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/start_button_selector</item>
    </style>

    <style name="CheckBoxContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>
</resources>
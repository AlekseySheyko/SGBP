<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/header1"
            style="@style/TextHeader"
            android:layout_marginTop="8dp"
            android:text="@string/header1"
            android:textAllCaps="true"/>

        <TextView
            style="@style/TextBody"
            android:text="@string/body1"/>

        <TextView
            style="@style/TextHeader"
            android:text="@string/header2"/>

        <TextView
            style="@style/TextBody"
            android:text="• Our Schools - Our Children!"/>

        <TextView
            style="@style/TextBody"
            android:text="• Our Community - Local Business!"/>

        <TextView
            style="@style/TextBody"
            android:text="• You – Exclusive Money Saving Offers!"/>

        <TextView
            style="@style/TextHeader"
            android:text="@string/header6"/>

        <TextView
            android:layout_marginBottom="32dp"
            android:layout_marginTop="0dp"
            style="@style/TextHeader"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:autoLink="web"
            android:singleLine="true"
            android:text="www.schoolgivebackprogram.com"
            android:textSize="16sp"/>

    </LinearLayout>

</ScrollView>
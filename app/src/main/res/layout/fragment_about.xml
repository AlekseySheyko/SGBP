<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/header1"
            android:text="@string/header1"
            style="@style/TextHeader"
            android:layout_marginTop="0dp"/>

        <TextView
            android:id="@+id/body1"
            android:text="@string/body1"
            style="@style/TextBody"/>

        <TextView
            android:id="@+id/header2"
            android:text="@string/header2"
            style="@style/TextHeader"/>

        <TextView
            android:id="@+id/body2"
            android:text="@string/body2"
            style="@style/TextBody"/>

        <TextView
            android:id="@+id/header3"
            android:text="@string/header3"
            style="@style/TextHeader"/>

        <TextView
            android:id="@+id/body3"
            android:text="@string/body3"
            style="@style/TextBody"/>

        <TextView
            android:id="@+id/header4"
            android:text="@string/header4"
            style="@style/TextHeader"/>

        <TextView
            android:id="@+id/body4"
            android:text="@string/body4"
            style="@style/TextBody"/>

        <TextView
            android:id="@+id/header5"
            android:text="@string/header5"
            style="@style/TextHeader"/>

        <TextView
            android:id="@+id/body5"
            android:text="@string/body5"
            style="@style/TextBody"/>

        <TextView
            android:id="@+id/header6"
            android:text="@string/header6"
            style="@style/TextHeader"/>

        <TextView
            android:id="@+id/body6"
            android:text="@string/body6"
            style="@style/TextBody"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="(916) 533-5518"
                android:textSize="18sp"
                android:textColor="#2980b9"
                android:clickable="true"
                android:onClick="dial"
                android:layout_marginTop="24dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="robert@schoolgivebackprogram.com"
                android:singleLine="true"
                android:textSize="14sp"
                android:textColor="#2980b9"
                android:clickable="true"
                android:onClick="sendEmail"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="4dp"/>

    </LinearLayout>

</ScrollView>
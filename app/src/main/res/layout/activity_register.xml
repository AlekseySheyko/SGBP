<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            tools:context="aleksey.sheyko.sgbp.ui.activities.RegisterActivity"
            style="@style/RegScrollView">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/registration_form"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/start_button_label"
            android:id="@+id/button"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="40dp"
            android:paddingRight="40dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginBottom="14dp"
            android:layout_marginTop="22dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:onClick="register"
            android:background="@drawable/start_button_selector"/>

    </LinearLayout>

</ScrollView>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:layout_weight=".5"
        android:gravity="bottom|right"
        android:orientation="vertical" >
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_lout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".5"
        android:gravity="bottom"
        android:orientation="vertical" >

        <com.widevision.sgbp.TransparentPanel
            android:id="@+id/transparent_panel"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right|center" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/backbg"
                android:gravity="right" >

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="50dp"
                    android:gravity="right|center"
                    android:fadingEdge="none"
                    android:orientation="horizontal" >

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:gravity="right|center"
                        android:layout_marginBottom="8dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal" >

                        <Button
                            android:id="@+id/donebtn"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                           
                            android:background="@drawable/blackbg"
                            android:text="Done"
                            android:textColor="#ffffff"
                            android:visibility="visible" />
                    </LinearLayout>
                </LinearLayout>
            </RelativeLayout>
        </com.widevision.sgbp.TransparentPanel>

        <ListView
            android:id="@+id/multigradelist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/iphonegradient"
            android:cacheColorHint="#00000000"
            android:divider="#000000"
            android:dividerHeight="1dp" >
        </ListView>
    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_element2"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/shaded"
    android:gravity="center"
    android:orientation="vertical"
    android:weightSum="1" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight=".5"
        android:orientation="vertical"
        android:weightSum="1" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:layout_weight=".2"
            android:gravity="bottom|center" >

            <EditText
                android:id="@+id/edit5"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/edittext_gradient"
                android:paddingLeft="5dp"
                android:editable="false"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btnsubmitsecurity"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_gradient"
                    android:text="Submit"
                    android:textColor="#000000" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center" >

                <Button
                    android:id="@+id/btncancelsecurity"
                    android:layout_width="135dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edittext_gradient"
                    android:text="Cancel"
                    android:textColor="#000000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/list_lout"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="bottom"
        android:layout_weight=".5" >

        <ListView
            android:id="@+id/securitylist"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:cacheColorHint="#00000000"
            android:divider="#000000"
            android:background="@drawable/iphonegradient"
            android:dividerHeight="1dp" >
        </ListView>
    </LinearLayout>

</LinearLayout><!-- From: file:/D:/Android/Projects/BackProgram/SGBP/src/main/res/layout/security_popup.xml -->
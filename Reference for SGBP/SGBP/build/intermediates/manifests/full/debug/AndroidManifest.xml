            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.widevision.sgbp.Clickheretoparticipate"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.widevision.sgbp.NotificationsnCoupans"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.widevision.sgbp.ManageRegistration"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden|adjustResize" >
        </activity>
        <activity
            android:name="com.widevision.sgbp.AboutProgram"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.widevision.sgbp.MarkerDemoActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.widevision.sgbp.Click_here_to_participate_option"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name="com.widevision.sgbp.Mobile_store_to_participate"
            android:screenOrientation="portrait" >
        </activity>

        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>

                <!-- Receives the actual messages. -->
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <!-- Receives the registration id. -->
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.widevision.sgbp" />
            </intent-filter>
        </receiver>

        <service android:name="com.widevision.sgbp.GCMIntentService" />
        <service android:name="com.widevision.sgbp.Participation_service" />
        <service android:name="com.widevision.sgbp.Auto_flag_status_check_service" />


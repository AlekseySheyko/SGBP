<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/findparticipatinglyt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/homebg"
    android:orientation="vertical" >

    <include layout="@layout/hometitle" />

    <LinearLayout
        android:id="@+id/btnidlyt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/footer"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/coupans"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/couponsbutton"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/notificationbutton"
            android:textColor="#ffffff" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/storenamelayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/footer"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight=".4"
            android:background="@drawable/dark_blue_gradiant"
            android:enabled="false"
            android:gravity="center"
            android:padding="5dp"
            android:text="Business Name"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/storelayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:background="@drawable/inputbox"
            android:gravity="left|center"
            android:padding="5dp" >

            <TextView
                android:id="@+id/storebtn"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@null"
                android:enabled="false"
                android:gravity="left|center"
                android:inputType="none"
                android:padding="5dp"
                android:singleLine="true"
               android:textSize="10sp"
                android:textColor="#456184"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/notidayslayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:background="@drawable/footer"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="1"
        android:visibility="gone" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_weight=".5"
            android:background="@drawable/dark_blue_gradiant"
            android:enabled="false"
            android:gravity="center"
            android:padding="5dp"
            android:text="Number of days"
            android:textColor="#ffffff"
            android:textSize="15sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/dayslayout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/inputbox"
            android:gravity="center"
            android:padding="5dp" >

            <TextView
                android:id="@+id/daysbtn"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:background="@null"
                android:enabled="false"
                android:gravity="center"
                android:inputType="none"
                android:singleLine="true"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#456184"
                android:textSize="15sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal" >

            <ListView
                android:id="@+id/notificationslistView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:cacheColorHint="#00000000"
                android:divider="#00000000"
                android:visibility="gone" >
            </ListView>

            <ListView
                android:id="@+id/coupanslistView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="5dp"
                android:cacheColorHint="#00000000"
                android:divider="#00000000" >
            </ListView>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/prgLoading"
            style="@android:style/Widget.ProgressBar.Inverse"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:visibility="gone" />
    </RelativeLayout>

</LinearLayout>